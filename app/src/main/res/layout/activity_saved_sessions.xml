<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.SavedSessions">

    <ImageView
        android:id="@+id/saved_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_account_box_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/savedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/saved_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="User name" />

    <TextView
        android:id="@+id/saved_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="127.0.0.1"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/saved_image"
        app:layout_constraintTop_toBottomOf="@+id/savedName" />

    <TextView
        android:id="@+id/saved_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Port"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/saved_host"
        app:layout_constraintTop_toBottomOf="@+id/savedName" />

    <TextView
        android:id="@+id/saved_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/saved_image"
        app:layout_constraintTop_toBottomOf="@+id/saved_host" />

</androidx.constraintlayout.widget.ConstraintLayout>